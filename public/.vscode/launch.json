  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sprectrum Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://spectrum.test/",
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    },
    {
      "name": "Homestead debug",
      "type": "php",
      "request": "launch",
      "localSourceRoot": "/Users/scara/Projects",
      "serverSourceRoot": "/home/vagrant/Projects/",
      "port": 9000,
    }
  ]
}